{
    "compilerOptions": {
        "target": "es5",
        "declaration": true,
        "declarationDir": "dist",
        "lib": ["es2015", "dom"],
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
